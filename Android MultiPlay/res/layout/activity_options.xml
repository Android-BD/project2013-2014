<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    
    tools:context=".OptionsActivity" >


    
<!--     Menu buttons to other activities -->
    
    
    
    <ImageButton 
        android:id="@+id/b_options_activity_connecions_icon"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        
        android:onClick="connections_OnClick"
        android:focusableInTouchMode="true"
        
        android:background="@drawable/options_activity_connections_icon"
        android:contentDescription="@string/contentDescription_options_activity_connections_icon"/>
    
    <ImageButton 
        android:id="@+id/b_options_activity_controllers_icon"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        
        android:onClick="controllers_OnClick"
        android:focusableInTouchMode="true"
        
        android:background="@drawable/options_activity_controllers_icon"
        android:contentDescription="@string/contentDescription_options_activity_controllers_icon"/>
    
    <ImageButton 
        android:id="@+id/b_options_activity_resetdata_icon"
        
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        
        android:onClick="resetdata_OnClick"
        android:focusableInTouchMode="true"
        
        android:background="@drawable/options_activity_resetdata_icon"
        android:contentDescription="@string/contentDescription_options_activity_resetdata_icon"/>    


    
<!--     Go-back button --> 
    
    
    
<!-- Right-bottom components for network switching on/off. -->

 
 
    <fragment android:name="com.android.multiplay.fragments.ConnectionPanel"
        android:id="@+id/connection_panel_for_activity_views"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />
    
    
    
<!--     Text hints forselection -->


	
	<TextView
	    android:id="@+id/tv_title_of_selected_item"
	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="30dp"
	    android:layout_toLeftOf="@+id/b_options_activity_connecions_icon"
	    android:paddingLeft="@dimen/activity_horizontal_margin"    
	    android:paddingTop="1dp"
	    android:paddingBottom="1dp"
	    
	    android:focusable="true"
	    
	    android:text="@string/tv_default_title_in_main_activity"
	    android:textAppearance="@style/activity_titles"
	    android:drawableLeft="@drawable/activity_title_icon_blue"
	    android:drawablePadding="10dp" 
	    android:background="@drawable/activity_title_glow_blue"/>
	
	<TextView
	    android:id="@+id/tv_describtion_of_selected_item"
	    
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/tv_title_of_selected_item"
	    android:layout_toLeftOf="@+id/b_options_activity_connecions_icon"
	    android:paddingLeft="@dimen/activity_horizontal_margin" 
	    android:layout_marginBottom="20dp"   
	    
	    android:background="@drawable/main_activity_0_title_big_background_icon"
	    android:text="@string/tv_default_title_description_in_main_activity"
	    android:textAppearance="@style/main_activity_titles_description" />

	<ImageButton
	    android:id="@+id/b_activity_icon_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"

	    android:onClick="go_back_OnClick"
        android:focusableInTouchMode="true"
        
	    android:contentDescription="@string/contentDescription_b_go_back"
	    android:background="@drawable/activity_icon_back" />

</RelativeLayout>