<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_carousel_system_controllers"
    android:duration="1000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    
    
<!--     Title bar -->

    <TextView
        android:id="@+id/tv_activity_title_system_controllers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/activity_title_glow_green"
        android:drawableLeft="@drawable/activity_title_icon_green"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:text="@string/tv_activity_title_system_controllers"
        android:textAppearance="@style/activity_titles" />

    <ImageView
        android:id="@+id/iv_carousel_activity_glow_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_activity_title_system_controllers"
        android:background="@drawable/activity_glow_horizontal_line_green"
        android:contentDescription="@string/contentDescription_iv_carousel_activity_glow_horizontal_line" />

    <TextView
        android:id="@+id/tv_activity_subtitle_system_controllers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/iv_carousel_activity_glow_horizontal_line"
        android:background="@drawable/carousel_activity_subtitle_glow"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:text="@string/tv_activity_title_multiplay_explorer"
        android:textAppearance="@style/activity_subtitles" />

    <ImageButton
        android:id="@+id/b_system_controllers_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_activity_subtitle_system_controllers"
        android:background="@drawable/carousel_button_search"
        android:contentDescription="@string/contentDescription_b_system_controllers_search" />

    <ImageView
        android:id="@+id/iv_system_controllers_miniature_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/iv_carousel_activity_glow_horizontal_line"
        android:background="@drawable/carousel_controller_icon_wheel_accel_miniature_green" 
        android:contentDescription="@string/contentDescription_iv_system_controllers_miniature_icon"/>

    <ImageButton
        android:id="@+id/b_system_controllers_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/b_system_controllers_search"
        android:layout_toRightOf="@id/b_system_controllers_search"
        android:layout_marginLeft="10dp"
        android:background="@drawable/carousel_button_cancel"
        android:contentDescription="@string/contentDescription_b_system_controllers_cancel" />

</RelativeLayout>