<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    
    
<!--     Title bar -->

    <TextView
        android:id="@+id/tv_activity_title_multiplay_explorer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/activity_title_glow_red"
        android:drawableLeft="@drawable/activity_title_icon_red"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="1dp"
        android:text="@string/tv_activity_title_multiplay_explorer"
        android:textAppearance="@style/main_activity_titles" />

    <ImageView
        android:id="@+id/iv_multiplay_explorer_activity_glow_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_activity_title_multiplay_explorer"
        android:background="@drawable/activity_glow_horizontal_line_red"
        android:contentDescription="@string/contentDescription_iv_multiplay_explorer_activity_glow_horizontal_line" />
	
	<ImageButton
	    android:id="@+id/b_connections_activity_testmouse"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/connections_activity_button_add_new"
	    android:contentDescription="" />

	<ImageButton
	    android:id="@+id/b_connections_activity_testright"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="105dp"
	    android:layout_toRightOf="@+id/tv_activity_title_multiplay_explorer"
	    android:background="@drawable/connections_activity_button_add_new" />

	<ImageButton
	    android:id="@+id/b_connections_activity_testmove"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/iv_multiplay_explorer_activity_glow_horizontal_line"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/connections_activity_button_add_new" />

	<ImageButton
	    android:id="@+id/b_connections_activity_testleft"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/tv_activity_title_multiplay_explorer"
	    android:layout_alignTop="@+id/b_connections_activity_testmouse"
	    android:background="@drawable/connections_activity_button_add_new" />

</RelativeLayout>